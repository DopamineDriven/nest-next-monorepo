{
  "name": "config",
  "version": "0.0.0",
  "main": "index.js",
  "author": "Andrew Ross",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "eslint-nest.js",
    "eslint-next.js",
    "jest-next.js"
  ],
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-next": "^12.1.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-testing-library": "^5.1.0",
    "eslint-plugin-yml": "^0.14.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "useTabs": false,
    "tabWidth": 2,
    "bracketSameLine": true,
    "jsxSingleQuote": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "bracketSpacing": true,
    "quoteProps": "as-needed",
    "printWidth": 80,
    "overrides": [
      {
        "files": [
          "**/*.{yaml|yml}"
        ],
        "options": {
          "singleQuote": false
        }
      },
      {
        "files": [
          "**/*.{module.css|css}"
        ],
        "options": {
          "printWidth": 60
        }
      }
    ]
  }
}

{
  "name": "nest-next-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "main": "index.js",
  "repository": "git@github.com:DopamineDriven/nest-next-monorepo.git",
  "author": "Andrew Ross <andrew@windycitydevs.io>",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "tsconfig:effective": "tsc --showConfig",
    "pretty:quick": "yarn pretty-quick --staged"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^27.4.1",
    "esbuild": "^0.14.28",
    "esbuild-jest": "^0.5.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "turbo": "*",
    "typescript": "^4.6.3"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "coverage/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "lint-staged": {
    "apps/**/*.{js|ts|jsx|tsx|d.{tsx|ts}|graphql|gql|graphqls}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js|ts|jsx|tsx|d.{ts|tsx}|graphql|gql|graphqls}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "peerDependencies": {}
}
